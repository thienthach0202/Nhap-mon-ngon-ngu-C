#include <stdio.h>

int main(void) {
  int h;
  printf("nhap h = ");
  scanf("%d", &h);
  
  for(int i = 1;i <= h;i++){
    //in ra h - i khoang trang
    for(int j = 1;j<=h-i;j++)
      printf("   ");
    
    //in ra 2*i - 1 ngoi sao
    for(int k = 1;k<=2*i-1;k++)
      printf(" * ");
    
      
  
  printf("\n");
  }
  return 0;
}
