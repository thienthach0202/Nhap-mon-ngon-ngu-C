#include <stdio.h>

int main(void) {
  int h;
  //h = 4: 4 hang 
  //hang 1: 1 (2*1 - 1) ngoi sao 3 (4 - 1) khoang trang
  //hang 2: 3 (2*2 - 1)          2 (4 - 2)
  //hang 3: 5 (2*3 - 1)          1 (4 - 3)
  //hang 4: 7 (2*4 - 1)          0 (4 - 4)
  //h = 3: 3 hang 
  //hang 1: 1 (2*1 - 1)ngoi sao 2 (3 - 1) khoang trang
  //hang 2: 3          1 (3 - 2)
  //hang 3: 5          0 (3 - 3)
  //hang 4:
  //h = 2: 2 hang 
  //hang 1: 1 ngoi sao 1 (2 - 1) khoang trang
  //hang 2: 3          0 
  //hang 3:
  //hang 4:
  //h = 1: 1 hang
  //hang 1: 1 ngoi sao 0 (1 - 1) khoang trang
  //hang 2:
  //hang 3:
  //hang 4:
  for(int i = 1;i <= h;i++){
    //in ra h - i khoang trang
    for(int j = 1;j < h - 1;j++)
        printf(" ");
    //in ra 2*i - 1 ngoi sao
    for(int k = 1;k < 2*i - 1;k++)
        printf("*");
  }
  printf("\n");

  return 0;
}
